{% extends 'sidebar.html.twig' %}

{% block title %}Gestion de mon département{% endblock %}

{% block page_contents %}

<!-- Partie centrale -->

<div class="fixed flex flex-col ml-14 mb-10 md:ml-64 lg:ml-64 xl:ml-64 w-full h-full dark:bg-slate-800 dark:text-white overflow-y-auto">

    <!-- Title (gestion manager) -->
    <div class="pl-24  pt-24">
        <p class="text-4xl">Gestion de mon équipe</p>
        <p class="text-2xl">Département : {{dpt.name}}</p>
    </div>

    <div class="w-[75rem] mb-10">
        <!-- boutons plannif et congés-->
        <div class="m-20">
            <a href="{{ path('planned_departement')}}" class="rounded border-transparent shadow-md font-semibold text-white bg-blue-600 focus:bg-gradient-to-tl from-green-400 via-sky-600 to-indigo-900 relative flex-row h-11 focus:outline-none p-4">Plannification équipe</a>
            <a href="#" class="rounded border-transparent shadow-md font-semibold text-white bg-blue-600 focus:text-white relative flex-row h-11 focus:outline-none p-4">Gestion des congés</a>
        </div>
        <!--fin boutons plannif-->

        <!-- cards manager-->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 ml-10 max-w-max">

            {% for user in dptUser %}

            <div class="max-w-max dark:bg-slate-900 dark:text-white bg-slate-100 shadow-lg rounded-lg flex flex-col justify-center items-center px-10 py-5">
                <div class="mb-8">
                    <img class="object-center object-cover rounded-full h-36 w-36" src="{{ user.picture }}" alt="photo">
                </div>
                <div class="text-center py-4">
                    <p class="text-xl font-bold mb-2">{{ user.fullname }}  </p>
                    <p class="text-base text-gray-400 font-normal">{{ user.job.name }}</p>
                </div>
                <div class="grid grid-cols-3 gap-8">
                    <a href="mailto:{{ user.emailpro }}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-10 w-10 text-green-500">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                          </svg>
                    </a>
                    <a href="#">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-10 w-10 text-green-500">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                      </svg>
                    </a>
                    <a href="#">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-10 w-10 text-green-500">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                      </svg>
                    </a>
                </div>
            </div>
             {% endfor %}

        <!-- fin cards manager-->
        </div>

    </div>
</div>
{% endblock %}
